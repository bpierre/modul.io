@import 'reset'

// Tools
box-shadow(params)
    -webkit-box-shadow params
    -moz-box-shadow params
    box-shadow params

// Typography
@font-face
    font-family 'Inconsolata'
    src url('font/inconsolata/inconsolata-webfont.eot')
    src url('font/inconsolata/inconsolata-webfont.eot?#iefix') format('embedded-opentype'), url('font/inconsolata/inconsolata-webfont.woff') format('woff'), url('font/inconsolata/inconsolata-webfont.ttf') format('truetype'), url('font/inconsolata/inconsolata-webfont.svg#UrbanoLight') format('svg')
    font-weight normal
    font-style normal
mono = "Inconsolata", courier new, monospace
sans = verdana, arial, sans-serif
tall = 25px
medium = 20px
small = 16px
mini = 10px

// Colors
bg = #0b1728
gray = #ECECEC
light = #2D3741
darker = #bbb
blue = #6593E8

// Grid
u = 20px


html
    height 100%

body > header h1
    width 198px
    height u*6
    margin 0 auto
    text-indent -9999px
    background url(i/logo_198x38.png) no-repeat 0 50px

body
    height 100%
    font small mono
    padding 0 0 u*6
    background-repeat no-repeat
    background-attachment fixed
    background-color #70194d
    background-image linear-gradient(bottom, rgb(112,25,77) 4%, rgb(40,18,71) 52%, rgb(11,23,40) 76%)
    background-image -o-linear-gradient(bottom, rgb(112,25,77) 4%, rgb(40,18,71) 52%, rgb(11,23,40) 76%)
    background-image -moz-linear-gradient(bottom, rgb(112,25,77) 4%, rgb(40,18,71) 52%, rgb(11,23,40) 76%)
    background-image -webkit-linear-gradient(bottom, rgb(112,25,77) 4%, rgb(40,18,71) 52%, rgb(11,23,40) 76%)
    background-image -ms-linear-gradient(bottom, rgb(112,25,77) 4%, rgb(40,18,71) 52%, rgb(11,23,40) 76%)
    background-image -webkit-gradient(linear,left bottom,left top,color-stop(0.04,rgb(112,25,77)),color-stop(0.52, rgb(40,18,71)),color-stop(0.76, rgb(11,23,40)));
    
#topbar
    width 100%
    position absolute
    top 0
    left 0
    font mini sans
    letter-spacing:1px;
    background rgba(3,14,32, 50%)
    border-bottom 1px solid #381A62
    padding 5px 0 4px 0
    opacity .8
    &:hover
        opacity 1
    ul
        padding 0 u
        li
            display inline
            padding 0px 6px
            a
                color #A2A3E2
                text-decoration none
                &:hover
                    color white

header
    margin 40px 0
    
h2
    color bg
    font-size medium
    margin 0 0 u*2 0
    text-shadow 0 1px 1px #fff

button
    font small mono
    background #eee
    border 1px solid darker
    border-color #fff darker darker #fff
    &:hover
        background #E4E4E4
    &:active
        background #E1E1E1

input
    padding 0 0 0 u
    font tall mono
    letter-spacing 1px
    background #F4F4F4
    border 1px solid darker
    border-color darker #fff #fff darker

.modul-create, .modul-list
    margin u*2 auto
    width u*30
    padding u
    background gray
    box-shadow(inset 0 0 40px 0 darker)
    border 1px solid gray

.modul-create
    font tall mono
    input
        height u*3
        width u*9.5
    button
        float right
        font-size tall
        width u*6
        height u*3 + 2px // with buttons, total height = height + padding + borders
div.modul-create.only
    h2
        text-align center
    button
        width u*12
        margin 0 auto
        display block
.modul-list
    li
        overflow hidden
        padding 0 0 u*2 0
        margin 0 0 u*2 0
        border-bottom 2px solid #E6E6E6
        &:last-child
            border-bottom 0
            margin-bottom 0
        .modul-view
            float left
            background bg
            margin 0 u 0 0
            padding 33px
            border 1px solid black
            border-color black white white black
        .modulinfo
            float left
            width u*16
            p
                margin 0
                border-bottom 1px white solid
                padding (u/4) 0
                .label
                    width 140px
                    display inline-block
                    color #888

        .join
            float right
            width u*6 - 2px
            height u*6 - 2px
            margin 0 0 0 u
