html{color:#000;background:#FFF; height:100%;}body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,code,form,fieldset,legend,input,button,textarea,p,blockquote,th,td{margin:0;padding:0;}table{border-collapse:collapse;border-spacing:0;}fieldset,img{border:0;}address,caption,cite,code,dfn,em,strong,th,var,optgroup{font-style:inherit;font-weight:inherit;}del,ins{text-decoration:none;}li{list-style:none;}caption,th{text-align:left;}h1,h2,h3,h4,h5,h6{font-size:100%;font-weight:normal;}q:before,q:after{content:'';}abbr,acronym{border:0;font-variant:normal;}sup{vertical-align:baseline;}sub{vertical-align:baseline;}legend{color:#000;}input,button,textarea,select,optgroup,option{font-family:inherit;font-size:inherit;font-style:inherit;font-weight:inherit;}input,button,textarea,select{*font-size:100%;}

// Typography
mono = "Inconsolata", courier new, monospace
tall = 25px
medium = 20px
small = 16px

// Colors
bg = #0b1728
gray = #ECECEC
light = #2D3741
darker = #bbb

// Grid
u = 20px

html
    background: bg url(i/logo_198x38.png) no-repeat 50% 50px

body
    font small mono
    padding u*6 0
    
h2
    color bg
    font-size medium
    margin 0 0 u*2 0
    text-shadow: 0px 1px 1px #ffffff;

#create, #modulist
    margin u*2 auto
    width u*30
    padding u
    background gray
    -webkit-box-shadow: inset 0px 0px 40px 0px darker;
    -moz-box-shadow: inset 0px 0px 40px 0px darker;
    box-shadow: inset 0px 0px 40px 0px darker; 
    border 1px solid gray
    
#create
    input
        font tall mono
        height u*3
        width u*21
        padding 0 0 0 u
        background #F4F4F4
        border-top darker solid 1px
        border-left darker solid 1px
        letter-spacing 1px
    button
        font tall mono
        width u*6
        height u*3
        margin 0 0 0 u

#modulist
    li
        overflow hidden
        padding 0 0 u*2 0
        margin 0 0 u*2 0
        border-bottom 2px solid #E6E6E6 
        &:last-child
            border-bottom none
            margin-bottom 0
        .modulview
            float left
            background bg
            margin 0 u 0 0
            border-top 1px solid black
            border-left 1px solid black
            border-bottom 1px solid white
            border-right 1px solid white
            img
                padding 33px
        .modulinfo
            float left
            width u*16
            p
                border-bottom 1px white solid
                padding (u/4) 0
                .label
                    width 140px
                    display inline-block
                    color #888
               
        .join
            float right
            width u*6
            height u*6
            margin 0 0 0 u
button
    background #eee
    font small mono
    border-right darker solid 1px
    border-bottom darker solid 1px
    &:hover
        background #E4E4E4
    &:active
        background #E1E1E1

       
@font-face
    font-family 'Inconsolata'
    src url('font/inconsolata/inconsolata-webfont.eot')
    src url('font/inconsolata/inconsolata-webfont.eot?#iefix') format('embedded-opentype'), url('font/inconsolata/inconsolata-webfont.woff') format('woff'), url('font/inconsolata/inconsolata-webfont.ttf') format('truetype'), url('font/inconsolata/inconsolata-webfont.svg#UrbanoLight') format('svg')
    font-weight normal
    font-style normal
