@import 'reset'

// Tools
box-shadow(params)
    -webkit-box-shadow params
    -moz-box-shadow params
    box-shadow params

// Typography
@font-face
    font-family 'Inconsolata'
    src url('font/inconsolata/inconsolata-webfont.eot')
    src url('font/inconsolata/inconsolata-webfont.eot?#iefix') format('embedded-opentype'), url('font/inconsolata/inconsolata-webfont.woff') format('woff'), url('font/inconsolata/inconsolata-webfont.ttf') format('truetype'), url('font/inconsolata/inconsolata-webfont.svg#UrbanoLight') format('svg')
    font-weight normal
    font-style normal
mono = "Inconsolata", courier new, monospace
tall = 25px
medium = 20px
small = 16px

// Colors
bg = #0b1728
gray = #ECECEC
light = #2D3741
darker = #bbb

// Grid
u = 20px

html
    background: bg

body > header h1
    width 198px
    height u*6
    margin 0 auto
    text-indent -9999px
    background url(i/logo_198x38.png) no-repeat 0 50px

body
    font small mono
    padding 0 0 u*6

h2
    color bg
    font-size medium
    margin 0 0 u*2 0
    text-shadow 0 1px 1px #fff

button
    font small mono
    background #eee
    border 1px solid darker
    border-color #fff darker darker #fff
    &:hover
        background #E4E4E4
    &:active
        background #E1E1E1

input
    padding 0 0 0 u
    font tall mono
    letter-spacing 1px
    background #F4F4F4
    border 1px solid darker
    border-color darker #fff #fff darker

.modul-create, .modul-list
    margin u*2 auto
    width u*30
    padding u
    background gray
    box-shadow(inset 0 0 40px 0 darker)
    border 1px solid gray

.modul-create
    input
        height u*3
        width u*21
    button
        font-size tall
        width u*6
        height u*3 + 2px // with buttons, total height = height + padding + borders
        margin 0 0 0 u
div.modul-create.only
    h2
        text-align center
    button
        width u*12
        margin 0 auto
        display block
.modul-list
    li
        overflow hidden
        padding 0 0 u*2 0
        margin 0 0 u*2 0
        border-bottom 2px solid #E6E6E6
        &:last-child
            border-bottom 0
            margin-bottom 0
        .modul-view
            float left
            background bg
            margin 0 u 0 0
            padding 33px
            border 1px solid black
            border-color black white white black
        .modulinfo
            float left
            width u*16
            p
                margin 0
                border-bottom 1px white solid
                padding (u/4) 0
                .label
                    width 140px
                    display inline-block
                    color #888

        .join
            float right
            width u*6 - 2px
            height u*6 - 2px
            margin 0 0 0 u
